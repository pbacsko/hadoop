{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",

    "type" : "object",
    "properties" : {
        "rules" : {
             "type" : "array",
             "items": {
                 "type": "object",
                 "properties": {
                     "type": { "type": "string" },
                     "matches": { "type": "string" },
                     "policy": { "type": "string",
                         "enum": ["rulePlacement", "specifiedPlacement", "reject", "defaultQueue" ] },
                     "queue": { "type": "string" },
                     "nestedUserRule": { "type": "object",
                         "properties" : {
                             "parent": { "type" : "string" },
                             "outerRule": { "type": "string" },
                             "innerCreate": { "type": "boolean" }
                         }
                      },
                     "fallbackResult": { "type": "string",
                         "enum": ["skip", "reject", "placeDefault"] },
                     "defaultQueue": { "type": "string" },
                     "create": { "type": "boolean" }
                }
            }
        }
    }
}